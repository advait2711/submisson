<!-- views/profile.ejs -->
<%- include('partials/header') %>

<main class="container">
    <div class="card">
    <div class="profile-header">
        <h1><%= profile.name %>'s Profile</h1>
        <p><strong>Email:</strong> <%= profile.email %></p>
        <p><strong>Bio:</strong> <%= profile.bio %></p>
    </div>
</div>

    <hr style="margin-bottom: 2rem;">

    <h3>Posts by <%= profile.name %></h3>
    <% posts.forEach(function(post) { %>
        <div class="card">
            <p class="card-text"><%= post.text %></p>
            <div class="d-flex justify-content-between align-items-center">
                <p class="card-subtitle">
                    Posted on <%= post.date.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %>
                </p>
                <% if (user && profile.id.toString() === user.id.toString()) { %>
                    <a href="/posts/delete/<%= post.id %>" class="btn btn-danger btn-sm">Delete</a>
                <% } %>
            </div>
        </div>
    <% }); %>
</main>

<%- include('partials/footer') %>